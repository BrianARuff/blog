<%= form_with(model: @blog_post, local: true) do |form| %>
	<% if @blog_post.errors.any? %>
	<div class="error_explanation">
		<h2><%= pluralize(@blog_post.errors.count, "Errors") %> Stopped this from being saved!!</h2>
		<ul>
			<% @blog_post.errors.full_messages do |message| %>
			<li><%= message %></li>
		</ul>
		<% end %>
	</div> 
	<% end %>

	<div class="form-group">
		<%= form.text_field :title, class: "form-control", placeholder: "Blog Title" %>
	</div>
	<div class="form-group">
		<%= form.text_field :author, class: "form-control", placeholder: "Author" %>
	</div>
	<div class="form-group">
		<%= form.text_area :blog_entry, class: "form-control", placeholder: "Comment" %>
	</div>
	<div class="actions">
		<%= form.submit "Post", class: "btn btn-primary" %>
	</div>
<% end %>