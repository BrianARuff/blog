<%= form_for([@blog_post, @blog_post.comments.build]) do |f| %>
	<div class="form-group">
		<%= f.text_field :author, placeholder: "Author", class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.text_area :comment_entry, placeholder: "Comment", class: "form-control" %>
	</div>
	<br>
	<p>
		<%= f.submit "Create", class: "btn btn-primary" %>
	</p>
<% end %>