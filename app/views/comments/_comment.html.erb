<%= comment.author %><br>
<%= comment.comment_entry %><br>
<%= time_ago_in_words(comment.created_at) %><br>
<div class="container">

<% if user_signed_in? %>
<p><%= link_to 'Delete', [comment.blog_post, comment], method: :delete, data: {confirm: "Are you sure you want to delete this comment!?"}, class: "btn btn-danger" %>
</p>
<% end %>
</div>